{% extends 'base.html.twig' %}

{% block title %}Create Inventory{% endblock %}

{% block body %}
<h2><i class="bi bi-plus-circle"></i> Create New Inventory</h2>
<hr>

<form method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">Basic Information</div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">Inventory Name *</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="tags" class="form-label">Tags (comma separated)</label>
                        <input type="text" class="form-control" id="tags" name="tags" placeholder="e.g., office, equipment, IT">
                    </div>
                </div>
            </div>

            <!-- Fixed Field Definitions -->
            <div class="card mb-4">
                <div class="card-header">Custom Fields (Fixed Column Strategy)</div>
                <div class="card-body">
                    <p class="text-muted small">Enable fields you want to use. Max 3 of each type.</p>
                    
                    <!-- String Fields -->
                    <h6 class="mt-3"><i class="bi bi-text-left"></i> Single-Line Text Fields (3 max)</h6>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead><tr><th>Active</th><th>Name</th><th>Description</th><th>Show in Table</th></tr></thead>
                            <tbody>
                            {% for i in 1..3 %}
                            <tr>
                                <td><input type="checkbox" class="form-check-input" name="string{{ i }}_active"></td>
                                <td><input type="text" class="form-control form-control-sm" name="string{{ i }}_name" placeholder="Field name"></td>
                                <td><input type="text" class="form-control form-control-sm" name="string{{ i }}_desc" placeholder="Tooltip"></td>
                                <td><input type="checkbox" class="form-check-input" name="string{{ i }}_intable" checked></td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <!-- Text Fields -->
                    <h6 class="mt-3"><i class="bi bi-text-paragraph"></i> Multi-Line Text Fields (3 max)</h6>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead><tr><th>Active</th><th>Name</th><th>Description</th><th>Show in Table</th></tr></thead>
                            <tbody>
                            {% for i in 1..3 %}
                            <tr>
                                <td><input type="checkbox" class="form-check-input" name="text{{ i }}_active"></td>
                                <td><input type="text" class="form-control form-control-sm" name="text{{ i }}_name" placeholder="Field name"></td>
                                <td><input type="text" class="form-control form-control-sm" name="text{{ i }}_desc" placeholder="Tooltip"></td>
                                <td><input type="checkbox" class="form-check-input" name="text{{ i }}_intable"></td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <!-- Number Fields -->
                    <h6 class="mt-3"><i class="bi bi-123"></i> Number Fields (3 max)</h6>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead><tr><th>Active</th><th>Name</th><th>Description</th><th>Show in Table</th></tr></thead>
                            <tbody>
                            {% for i in 1..3 %}
                            <tr>
                                <td><input type="checkbox" class="form-check-input" name="int{{ i }}_active"></td>
                                <td><input type="text" class="form-control form-control-sm" name="int{{ i }}_name" placeholder="Field name"></td>
                                <td><input type="text" class="form-control form-control-sm" name="int{{ i }}_desc" placeholder="Tooltip"></td>
                                <td><input type="checkbox" class="form-check-input" name="int{{ i }}_intable" checked></td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <!-- Boolean Fields -->
                    <h6 class="mt-3"><i class="bi bi-toggle-on"></i> Boolean Fields (3 max)</h6>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead><tr><th>Active</th><th>Name</th><th>Description</th><th>Show in Table</th></tr></thead>
                            <tbody>
                            {% for i in 1..3 %}
                            <tr>
                                <td><input type="checkbox" class="form-check-input" name="bool{{ i }}_active"></td>
                                <td><input type="text" class="form-control form-control-sm" name="bool{{ i }}_name" placeholder="Field name"></td>
                                <td><input type="text" class="form-control form-control-sm" name="bool{{ i }}_desc" placeholder="Tooltip"></td>
                                <td><input type="checkbox" class="form-check-input" name="bool{{ i }}_intable" checked></td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <!-- Link Fields -->
                    <h6 class="mt-3"><i class="bi bi-link-45deg"></i> Document/Image Link Fields (3 max)</h6>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead><tr><th>Active</th><th>Name</th><th>Description</th><th>Show in Table</th></tr></thead>
                            <tbody>
                            {% for i in 1..3 %}
                            <tr>
                                <td><input type="checkbox" class="form-check-input" name="link{{ i }}_active"></td>
                                <td><input type="text" class="form-control form-control-sm" name="link{{ i }}_name" placeholder="Field name"></td>
                                <td><input type="text" class="form-control form-control-sm" name="link{{ i }}_desc" placeholder="Tooltip"></td>
                                <td><input type="checkbox" class="form-check-input" name="link{{ i }}_intable"></td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-lg"></i> Create Inventory
                        </button>
                        <a href="{{ path('app_inventory_index') }}" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}
