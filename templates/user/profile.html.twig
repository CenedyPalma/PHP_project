{% extends 'base.html.twig' %}

{% block title %}{{ profileUser.name }}'s Profile{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <i class="bi bi-person-circle" style="font-size: 5rem; color: #6c757d;"></i>
                <h3 class="mt-3">{{ profileUser.name }}</h3>
                <p class="text-muted">{{ profileUser.email }}</p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-box-seam"></i> Inventories Created ({{ inventories|length }})
            </div>
            <ul class="list-group list-group-flush">
                {% for inventory in inventories %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_inventory_show', {id: inventory.id}) }}">{{ inventory.name }}</a>
                    <span class="badge bg-secondary">{{ inventory.items|length }} items</span>
                </li>
                {% else %}
                <li class="list-group-item text-muted">No inventories created.</li>
                {% endfor %}
            </ul>
        </div>

        <div class="card">
            <div class="card-header">
                <i class="bi bi-clock-history"></i> Recent Items Added
            </div>
            <ul class="list-group list-group-flush">
                {% for item in recentItems %}
                <li class="list-group-item">
                    <a href="{{ path('app_item_show', {id: item.id}) }}">{{ item.customId }}</a>
                    <small class="text-muted">in {{ item.inventory.name }}</small>
                </li>
                {% else %}
                <li class="list-group-item text-muted">No items added yet.</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}
