{% extends 'base.html.twig' %}

{% block title %}Edit Item: {{ item.customId }}{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_inventory_show', {id: item.inventory.id}) }}">{{ item.inventory.name }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_item_show', {id: item.id}) }}">{{ item.customId }}</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
</nav>

<h2><i class="bi bi-pencil"></i> Edit Item: {{ item.customId }}</h2>
<hr>

{% set activeFields = item.inventory.activeFields %}

<form method="post">
    <input type="hidden" name="version" value="{{ item.version }}">
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Item Details</div>
                <div class="card-body">
                    {% for field in activeFields %}
                    {% set currentVal = item.getFieldValue(field.type, field.index) %}
                    <div class="mb-3">
                        <label for="{{ field.type }}{{ field.index }}" class="form-label">
                            {{ field.name }}
                            {% if field.desc %}<small class="text-muted" title="{{ field.desc }}"><i class="bi bi-info-circle"></i></small>{% endif %}
                        </label>
                        
                        {% if field.type == 'string' %}
                            <input type="text" class="form-control" id="{{ field.type }}{{ field.index }}" 
                                   name="{{ field.type }}{{ field.index }}" value="{{ currentVal }}">
                        
                        {% elseif field.type == 'text' %}
                            <textarea class="form-control" id="{{ field.type }}{{ field.index }}" 
                                      name="{{ field.type }}{{ field.index }}" rows="3">{{ currentVal }}</textarea>
                        
                        {% elseif field.type == 'int' %}
                            <input type="number" class="form-control" id="{{ field.type }}{{ field.index }}" 
                                   name="{{ field.type }}{{ field.index }}" value="{{ currentVal }}">
                        
                        {% elseif field.type == 'bool' %}
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="{{ field.type }}{{ field.index }}" 
                                       name="{{ field.type }}{{ field.index }}" {% if currentVal %}checked{% endif %}>
                                <label class="form-check-label" for="{{ field.type }}{{ field.index }}">Yes</label>
                            </div>
                        
                        {% elseif field.type == 'link' %}
                            <input type="url" class="form-control" id="{{ field.type }}{{ field.index }}" 
                                   name="{{ field.type }}{{ field.index }}" value="{{ currentVal }}" placeholder="https://...">
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-lg"></i> Save Changes
                        </button>
                        <a href="{{ path('app_item_show', {id: item.id}) }}" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </div>
            </div>

            <div class="card border-danger">
                <div class="card-header bg-danger text-white">Danger Zone</div>
                <div class="card-body">
                    <form method="post" action="{{ path('app_item_delete', {id: item.id}) }}" 
                          onsubmit="return confirm('Delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash"></i> Delete Item
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}
